<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/head.ejs') %>
    
    <link rel="stylesheet" href="/css/productDetail.css" /> 

    <title>Detalle de Producto</title>

    <style>
/* custom radio */
.radio {
    display: block;
    position: relative;
    padding-left: 35px;
    margin-bottom: 12px;
    cursor: pointer;
    height: 35px;
    line-height: 50px;   
    margin-right: 3%;
    margin-top: 1%;  
}

/* create custom radio */
.radio1 .check {
    position: absolute;
    top: 0;
    left: 0;
    height: 30px;
    width: 30px;
    background-color:red;
    border: 1px solid red;
    border-radius: 50%;
}
.radio2 .check {
    position: absolute;
    top: 0;
    left: 0;
    height: 30px;
    width: 30px;
    background-color:black;
    border: 1px solid black;
    border-radius: 50%;
}
.radio3 .check {
    position: absolute;
    top: 0;
    left: 0;
    height: 30px;
    width: 30px;
    background-color:gray;
    border: 1px solid gray;
    border-radius: 50%;
}
.radio4 .check {
    position: absolute;
    top: 0;
    left: 0;
    height: 30px;
    width: 30px;
    background-color:white;
    border: 1px solid black;
    border-radius: 50%;
}
/* on mouse-over, add border color */
.radio1:hover input ~ .check {
    border: 3px solid black;
}
.radio2:hover input ~ .check {
    border: 3px solid white;
    
}
.radio3:hover input ~ .check {
    border: 3px solid black;
}
.radio4:hover input ~ .check {
    border: 3px solid black;
}
/* add background color when the radio is checked */
.radio1 input:checked ~ .check {
    background-color: red;
  
    height: 45px;
    width: 45px;
}
.radio2 input:checked ~ .check {
    background-color: black;
   
    height: 45px;
    width: 45px;
}
.radio3 input:checked ~ .check {
    background-color: gray;
   
    height: 45px;
    width: 45px;
}
.radio4 input:checked ~ .check {
    background-color: white;
    height: 45px;
    width: 45px;
}
    </style>
</head>

<body>
    <!------------------------------------ header ------------------------------------------------------>
<%- include('../partials/header.ejs') %>

    <!-- MAIN -->
    <main >
        <!-- IMAGEN ARTICULO A DETALLAR: EN UN FUTURO VA A SER UN CARRUSEL -->
        <div class="caja-menu-imagen">
        <div class="imagen-articulo">
            <img src="/images/<%= Productos.img%>" alt="FOTO DE PRUEBA">
            <img src="/images/<%= Productos.uri_foto2%>" alt="FOTO DE PRUEBA">
            <img src="/images/<%= Productos.uri_foto3%>" alt="FOTO DE PRUEBA">
        </div>

</div>
        
        <!-- DETALLES DEL PRODUCTO DEBAJO DE LA IMAGEN -->
        <div class="caja-detalles">
            <div class="titulo-articulo">
                <h2><%= Productos.nombre%></h2>
            </div>
            <div class="precio-articulo">
                <h3>$<%= Productos.precio%></h3>
            </div>
        </div>

        <!-- FORMULARIO COMPRA -->
        <form id="form" onsubmit="agregarAlcarrito(); return false;"></form>
            
        <!-- TALLES -->       
        <div class="talle talle1">
            <div class="caja-talles">
             <h4 style="margin-right: 10px; margin-top: 3px;">ELEGI TU TALLE:</h4>
             <select id="talle" name="talle">
                <option class="listado-talles" value="S">S</option>
                <option  class="listado-talles" value="M">M</option>
                <option class="listado-talles" value="L">L</option>
                <option class="listado-talles" value="L">XL</option>
             </select>
            </div>
        </div>

        <!-- COLORES -->
        <div class="talle talle1">
            <h4>AHORA TU COLOR:</h4>
            <div class="caja-talles">


                <label class="radio1 radio">
                    
                    <input type="radio"  name="radio" 
                    
                    <% if (Productos.color == "Rojo") {%>
                    checked="<%="checked" %>" <% } %>>
                    <span class="check"></span>
                </label>

                <label class="radio2 radio">
                    <input type="radio" name="radio"
                    <% if (Productos.color == "Negro") {%>
                        checked="<%="checked" %>" <% } %>>
                    <span class="check"></span>
                </label>

                <label class="radio3 radio">
                    <input type="radio" name="radio"
                    <% if (Productos.color == "Gris") {%>
                        checked="<%="checked" %>" <% } %>>
                    <span class="check"></span>
                </label>

                <label class="radio4 radio">
                    <input type="radio" name="radio"
                    <% if (Productos.color == "Blanco") {%>
                        checked="<%="checked" %>" <% } %>>
                    <span class="check"></span>
                </label>



            <!-- 
           <input class="listado-color1"  type="radio" id="Rojo" name="color" value="Rojo" >
           <span class="check"></span>
            <input type="radio" class="listado-color2" id="Negro" name="color" value="Negro" checked="checked">
            <input type="radio" class="listado-color3" id="Gris" name="color" value="Gris">
            <input type="radio" class="listado-color4" id="Blanco" name="color" value="Blanco">
             -->



            </div>
        </div>

        <!-- CANTIDAD -->
        <!--
        <div class="talle talle1">
            <h4 for="cantidad">CANTIDAD:</h4>
            <input type="number" id="cantidad" name="cantidad" min="1" max="10" default="1" required>
        </div>
        -->


        <!-- DESCRIPCION DEL PRODUCTO -->
        <div class="descripcion-articulo">
            <h4>DESCRIPCION DEL PRODUCTO:</h4>
            <p><%= Productos.descripcion%></p>
        </div>
    </form>


        <!-- BOTON AGREGAR A CARRITO -->
        <a href="/" class="add-to-a-cart agregar_carrito ">
            <div class=""><input type="submit" class=" boton-comprar comprar" value="AGREGAR AL CARRITO" data-id="<%= Productos.id %>">
            </div>
            </a>

        <!--
        <div>
            <a href="/product-cart" class="agregar-carrito ">
                <input type="submit" class="boton-comprar comprar " value="AGREGAR AL CARRITO"  data-id="<%= Productos.id %>" >
            </a>
        </div>
        -->
    

        <!-- Productos RELACIONADOS: FUTURO CARRUSEL -->
        <div>
            <h5 class="titulo-ProductosRelacionados">Productos RELACIONADOS:</h5>
            <div class="carrusel">
                <div class="carrusel-items">       
                    <% for(let i=0; i < ProductosRelacionados.length; i++) {%>
                    <div class="carrusel-item">
                        <a href="/productDetail/<%= Productos.id%>">
                    <img src="/images/<%= ProductosRelacionados[i].img%>">
                </a>
                </div>
                <%}%>    
                </div>
            </div>
        </div>


    </main>
<!--------------------------------- footer --------------------------------------------------------------->
<%- include('../partials/footer.ejs') %>
<script src="/js/productDetail.js"></script>

<script src="/js/carrito.js"></script>

</body>

</html>