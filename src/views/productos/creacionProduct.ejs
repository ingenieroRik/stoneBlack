<!DOCTYPE html>
<html lang="es">

<head>
    <%- include('../partials/head.ejs') %>
        <!-- LINK CSS -->
        <link rel="stylesheet" href="/css/creacionProducto.css" />
        <!-- BOOTSTRAP -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
            crossorigin="anonymous" />
        <title>Creacion de Producto</title>
</head>

<body class="body">
    <main>
        <div class="logo-ext">
        <a href="/listadoProductos">
            <img class="logo" src="/images/StoneBlack.png" alt="logo"/></a>
        </div>
        <div>
            <h2 class="titulo-principal">SUBI TU NUEVO PRODUCTO:</h2>
        </div>
        <section>
               
             <!-- para indicar si se cargo bien -->
                     
             <%  if (locals.err && err.pieFormCreateProd) {  %> 
    
                <div name="pieFormCreateProduct">
                    <p class="pie-form-crear-prod" ><%= err.pieFormCreateProd.msg %> </p>
                </div>
                <% } %> 

            <!-- forEach PARA MOSTRAR MSG DE ERRORES -->
             <%if (locals.errors) { errors.forEach(error=> { %>
                <p class="errores" style="color: blue">
                    <%= error.msg %>
                </p>
                <% }) } %> 
                <!-- LISTA VALIDACIONES FRONT -->
                <div class="errores">
                    <ul id="ul"> </ul>
                </div>
                    <form action="/creacionProduct" method="POST" id="form" class="" enctype="multipart/form-data">
                        <!-- CAJA FORMULARIO -->
                        <div class="caja-formulario">
                            <!-- NOMBRE ARTICULO -->
                            <div>          
                                <label for="foto">Nombre de articulo:</label>
                                <input type="text" name="nombre"
                                    value="<%= locals.old && old.nombre ? old.nombre : '' %>" class="form-control"
                                    id="nombre" placeholder="Nombre de articulo" />
                                     
                            </div>
                            <!-- DESCRIPCION ARTICULO -->
                            <div>
                                <label for="foto">Descripcion de artículo:</label>
                                <input outline="none" type="text" name="descripcion"
                                    value="<%= locals.old && old.descripcion ? old.descripcion : '' %>"
                                    class="form-control" placeholder="Descripcion de articulo mínimo 20 caracteres" id="descripcion" />
                            </div>
                            <!-- Talle ARTICULO -->
                            <div>
                                <label for="">Talle de artículo:</label>
                                <br>
                                <input type="radio" name="talle" class=""
                                                         value="S" id="color"> S<br>
                                <input type="radio" name="talle" class=""
                                                        value="M" id="color"> L<br>
                                <input type="radio" name="talle"class=""
                                                        value="L" id="color"> M<br>
                                <input type="radio" name="talle" class=""
                                                         value="XL" id="color"> XL<br>










                                <!--
                                <input type="text" name="talle" class="form-control"
                                    value="<%= locals.old && old.talle ? old.talle : '' %>" id="talle" />
                                  -->  
                            </div>
                            <!-- COLOR ARTICULO -->
                            <div>
                                <label for="">Color de artículo:</label>

                               
                                <br>
                                <input type="radio" name="color" class=""
                                                         value="rojo" id="color"> Rojo<br>
                                <input type="radio" name="color" class=""
                                                        value="negro" id="color"> Negro<br>
                                <input type="radio" name="color"class=""
                                                        value="gris" id="color"> Gris<br>
                                <input type="radio" name="color" class=""
                                                         value="blanco" id="color"> Blanco<br>
                            
                            
                              <!-- 
                                <input type="text" name="color" class="form-control"
                                    value="<%= locals.old && old.color ? old.color : '' %>" id="color" />
                              -->
                            </div>


                            <!-- CANTIDAD DE ARTICULOS -->
                            <div>
                                <label for="foto">Cantidad:</label>
                                <input type="text" name="cantidad"
                                    value="<%= locals.old && locals.cantidad ? old.cantidad : '' %>"
                                    placeholder="Cantidad de articulos" class="form-control" id="cantidad" />
                            </div>




                            <!-- PRECIO ARTICULO -->
                            <div>
                                <label for="foto">Precio de producto:</label>
                                <input type="text" name="precio"
                                    value="<%= locals.old && locals.precio ? old.precio : '' %>"
                                    placeholder="Precio de articulo" class="form-control" id="precio" />
                            </div>
                            <!-- DESCUENTO ARTICULO -->
                            <div>
                                <label for="foto">Descuento de producto:</label>
                                <input type="text" name="descuento" class="form-control" id="descuento"
                                    value="<%= locals.old && locals.descuento ? old.descuento : '' %>"
                                    placeholder="Descuento de articulo" id="descuento" />
                            </div>
                            <!-- FOTO DE PRODUCTO -->
                            <div class="foto">
                                <label for="foto">Fotos de producto (Debes cargar 3 fotos) :</label>
                                <input type="file"  name="img" value="<%= locals.old && locals.img ? old.img : '' %>"
                                    class="form-control" id="img" multiple="multiple" accept="image/*" />
                            </div>
                            <!-- FOTO DE PRODUCTO -->
                            <!-- <div class="foto">
                                <label for="foto">Fotos de producto:</label>
                                <input type="file" name="uri_foto2" class="form-control" id="img2" />
                            </div> -->
                            <!-- FOTO DE PRODUCTO -->
                            <!-- <div class="foto">
                                <label for="foto">Fotos de producto:</label>
                                <input type="file" name="uri_foto3" class="form-control" id="img3" />
                            </div> -->
                        </div>

                        <!-- CAJA BOTONES -->
                        <div class="caja-botones">
                            <!-- BOTON CARGAR ARTICULO -->
                            <div>
                                <input class="btn btn-outline-secondary" type="submit" value="Cargar"
                                    placeholder="Cargar" id="btnCargar" />
                            </div>
                            <!-- BOTON RESETEAR FORMULARIO -->
                            <div>
                                <input class="btn btn-outline-secondary" type="reset" placeholder="Restablecer"
                                    value="Restablecer" />
                            </div>
                            <!-- BOTON VOLVER PAGINA ANTERIOR -->
                            <div>
                                <input class="btn btn-outline-secondary" type="button" placeholder="Volver"
                                    value="Volver" id="btnVolver"  />
                            </div>
                        </div>
                    </form>


                    
                    
        </section>
    </main>
    <script src="/js/creacionProduct.js"></script>
</body>

</html>